log4j.rootLogger=info,stdout

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.Target=System.out
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=@%-5p|%d|%l|%t %n  Info:%m %n%n
log4j.appender.stdout.encoding=UTF-8

###################################################################################
###################################################################################

log4j.logger.org.springframework=debug,springframework
log4j.additivity.org.springframework=true
log4j.appender.springframework=org.apache.log4j.ConsoleAppender
log4j.appender.springframework.Target=System.out
log4j.appender.springframework.layout=org.apache.log4j.PatternLayout
log4j.appender.springframework.layout.ConversionPattern=@%-5p|%d|%l|%t %n  Info:%m %n%n
log4j.appender.springframework.encoding=UTF-8









